{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <h2>Post</h2>
    <table class="table table-striped">
        <thead>
        <tr>
            <td>
                Tytu≈Ç
            </td>
            <td>
                Tekst
            </td>
            <td>
                Utworzony
            </td>

        </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    {{ post.title }}
                </td>
                <td>
                    {{ post.text }}
                </td>
                <td>
                    {{ post.createdAt|format_datetime('medium', 'short') }}
                </td>
            </tr>
        </tbody>
    </table>
    <br>
    {% if comments|length > 0 %}
        <h2>Komentarze</h2>
        <table class="table table-striped">
            <thead>
            <tr>
                <td>
                    Tekst
                </td>
                <td>
                    Utworzony
                </td>

            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>
                        {{ comment.text }}
                    </td>
                    <td>
                        {{ comment.createAt|format_datetime('medium', 'short') }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <h2>Nie ma tu komentarzy. Badz pierwszy i go dodaj :)</h2>
        <br>
    {% endif %}

    {{ form(comment_form) }}

{% endblock %}
